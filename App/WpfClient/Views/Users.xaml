<UserControl x:Class="WpfClient.Views.Users"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Disconnect" Click="Button_Click"></Button>
        <ListView Grid.Row="1" ItemsSource="{Binding UserViewModels}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="5" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="5">
                        <TextBlock Text="{Binding User.Name}" FontWeight="Bold" />
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
