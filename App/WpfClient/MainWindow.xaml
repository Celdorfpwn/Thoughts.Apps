<Controls:MetroWindow x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        BorderThickness="1"
                      ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        Title="Thoughts" Height="700" Width="400"
                      Loaded="MetroWindow_Loaded" Closed="MetroWindow_Closed">
    <Grid Margin="10">
        <ContentControl Name="MainContent">
            <Controls:ProgressRing Name="ProgressRing" IsActive="True"></Controls:ProgressRing>
        </ContentControl>
    </Grid>
</Controls:MetroWindow>
